<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-12">
    <h4>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h4>
    <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}